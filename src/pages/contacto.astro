---
import DefaultLayout from '../layouts/DefaultLayout.astro'
---

<DefaultLayout title="Contacto">
  <h1 class="contact-title">Formulario de Contacto</h1>

  <form action="https://formspree.io/f/myzzbpaa" method="POST" class="contact-form">
    <div class="form-group">
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" required class="form-input" />
    </div>

    <div class="form-group">
      <label for="email">Correo Electrónico:</label>
      <input type="email" id="email" name="email" required class="form-input" />
    </div>

    <div class="form-group">
      <label for="subject">Asunto:</label>
      <input type="text" id="subject" name="subject" required class="form-input" />
    </div>

    <div class="form-group">
      <label for="message">Mensaje:</label>
      <textarea id="message" name="message" required class="form-input"></textarea>
    </div>

    <button type="submit" class="submit-btn">Enviar</button>
  </form>

  <style>
    /* General form styles */
    .contact-form {
      display: flex;
      flex-direction: column;
      max-width: 600px;
      margin: 0 auto;
      padding: 2rem;
      background-color: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      font-size: 1.1rem;
      color: #333;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }

    .form-input {
      width: 100%;
      padding: 0.8rem;
      font-size: 1rem;
      border: 1px solid #ddd;
      border-radius: 6px;
      background-color: #fff;
      transition: border-color 0.3s ease;
    }

    .form-input:focus {
      border-color: #0066cc;
      outline: none;
    }

    textarea {
      resize: vertical;
      min-height: 150px;
    }

    .submit-btn {
      padding: 1rem;
      background-color: #0066cc;
      color: white;
      font-size: 1.1rem;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .submit-btn:hover {
      background-color: #005bb5;
    }

    /* Título con margen */
    .contact-title {
      margin-left: 2rem; /* Tabulación */
    }

    /* Mobile Responsiveness */
    @media (max-width: 600px) {
      .contact-form {
        padding: 1.5rem;
      }

      .form-group label {
        font-size: 1rem;
      }

      .form-input {
        font-size: 0.95rem;
      }

      .submit-btn {
        font-size: 1rem;
        padding: 0.8rem;
      }

      .contact-title {
        margin-left: 1rem; /* Ajuste de tabulación en móviles */
      }
    }
  </style>
</DefaultLayout>
